<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mobile_login"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your mobile number"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="70dp">


        <ImageView
            android:layout_width="88dp"
            android:layout_height="35dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/flagindo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="+62"
            android:textColor="@android:color/black"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/txtaddmobilenumber"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:backgroundTint="#000"
            android:hint="0858-2177-1577"
            android:inputType="date"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="450dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="By continuing you may receive an SMS for verification.Message and data rates may apply."
            android:textColor="@android:color/black"
            android:layout_marginLeft="25dp"/>


        <Button
            android:id="@+id/btncircle"
            android:layout_width="53dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="10dp"
            android:width="40dp"
            android:height="40dp"
            android:background="@drawable/btn_circle"
            android:text="-->"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
